extends /_base

block content
  tr 
    td(style='padding: 1rem;') 
      p(style='text-transform:uppercase; text-align: center; margin: 30px 0 40px 0; font-weight: 600; font-size: 1rem;')= data.subject
      p(style='margin-block-start:1rem; margin-block-end:2rem;') Dear 
        span(style="text-transform: lowercase;") user
      p(style='margin-block-start: 1rem; margin-block-end: 1rem;') Please copy on the token below and paste into the AACSL application to reset your password, please ignore this message if it was not initiated by you!. 
  tr
    td(style='padding-top: 1rem; padding-right: 1rem; padding-left: 1rem;')
      p(style='margin:0 auto; letter-spacing: 5px;max-width: 300px; font-weight: 600; text-align: center; font-size: 1.5rem;')=JSON.parse(data.data).token
  tr
    td(style='padding: 1rem;')
      p(style='margin-bottom: 0.5rem;') If you require additional assistance or you did not make this change, please contact 
        a(href="http://example.com", target="_blank", rel="noopener noreferrer") support@aacsl.com.
      p Cheers,
      p The AACSL team
  tr
    td
      p(style='text-align:center; font-size: 11px; padding: 1rem 0;') This email was sent to 
        span()= data.to
  