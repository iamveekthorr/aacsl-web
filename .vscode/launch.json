{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Nest App",
      "type": "node",
      "request": "launch",
      "args": ["${workspaceFolder}\\api\\dist\\main.js"],
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": false,
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true
    }
  ]
}
